<Application x:Class="Stempeleditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Stempeleditor"
             xmlns:viewModel="clr-namespace:Stempeleditor.MVVM.ViewModel"
             xmlns:view="clr-namespace:Stempeleditor.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type viewModel:UebersichtViewModel}">
                <view:UebersichtView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:StempelEditierenViewModel}">
                <view:StempelEditierenView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
